export const AuthProvider = ({ children }) => {
  // Initialize state with proper type checking and defaults
  const [state, setState] = useState(() => {
    // Initialize from localStorage if available
    try {
      const storedUser = localStorage.getItem('user');
      const token = localStorage.getItem('access_token');
      const isLoggedIn = localStorage.getItem('isLoggedIn') === 'true';
      
      return {
        user: storedUser ? JSON.parse(storedUser) : null,
        session: token ? { access_token: token } : null,
        loading: true,
        error: null,
        initialized: false,
        permissions: {}
      };
    } catch (error) {
      console.error('Error initializing auth state:', error);
      return {
        user: null,
        session: null,
        loading: true,
        error: 'Error initializing authentication',
        initialized: false,
        permissions: {}
      };
    }
  });
  
  // Destructure state for easier access
  const { user, session, loading, error, initialized, permissions } = state;
  
  // Helper function to update state
  const updateState = (updates) => {
    setState(prev => ({
      ...prev,
      ...updates,
      error: updates.error || null // Reset error if not specified
    }));
  };
  
  const navigate = useNavigate();
  const location = useLocation();

  // Memoized permission update
  const updatePermissions = useCallback((role) => {
    updateState({ 
      permissions: PERMISSIONS[role] || {},
      user: state.user ? { ...state.user, permissions: PERMISSIONS[role] || {} } : null
    });
  }, [state.user]);

  // Get redirect path based on role
  const getRedirectPath = useCallback((role) => {
    const normalizedRole = (role || '').toLowerCase().trim();
    
    // Debug log to check the role being received
    console.log('getRedirectPath - Role received:', normalizedRole);
    
    // Map roles to their respective dashboard paths
    const rolePathMap = {
      'admin': '/admin/dashboard',
      'teacher': '/faculty/dashboard',
      'faculty': '/faculty/dashboard',
      'student': '/student/dashboard',
      'parent': '/parent/dashboard',
      'transport_admin': '/admin/transport',
      'driver': '/driver/dashboard'
    };
    
    const path = rolePathMap[normalizedRole] || '/';
    console.log('Redirecting to path:', path, 'for role:', normalizedRole);
    return path;
  }, []);

  // Handle user session with optimized state updates
  const handleUserSession = useCallback(async (currentSession) => {
    console.log('=== handleUserSession Called ===');
    console.log('Has session:', !!currentSession);
    console.log('State initialized:', state.initialized);
    console.log('State loading:', state.loading);

    // Skip if we already processed this session AND we're initialized
    if (currentSession?.access_token === state.session?.access_token && state.initialized) {
      console.log('Session unchanged and already initialized, skipping');
      return;
    }

    console.log('Handling user session:', { hasSession: !!currentSession, hasUser: currentSession?.user });
    
    // Early return if no session or no user in session
    if (!currentSession?.user) {
      // Only clear if we have a current user or session
      if (state.user || state.session) {
        console.log('No active session found, clearing auth state');
        localStorage.removeItem('user');
        localStorage.removeItem('access_token');
        localStorage.removeItem('isLoggedIn');
        localStorage.removeItem('sb-qkaaoeismqnhjyikgkme.supabase.co-auth-token');
        
        updateState({
          user: null,
          session: null,
          permissions: {},
          loading: false,
          initialized: true,
          error: null
        });
      }
      return;
    }
    
    // If we have a session but no access token, it's invalid
    if (!currentSession.access_token) {
      console.warn('Session exists but has no access token');
      if (state.user !== null || state.session !== null) {
        localStorage.removeItem('user');
        localStorage.removeItem('access_token');
        localStorage.removeItem('isLoggedIn');
        
        updateState({
          user: null,
          session: null,
          permissions: {},
          loading: false,
          initialized: true,
          error: 'Invalid session: Missing access token'
        });
      }
      return;
    }

    try {
      // Get role from user_metadata (Supabase stores it there)
      const userRole = (currentSession.user.user_metadata?.role || ROLES.STUDENT).toLowerCase();
      console.log('Processing session for user:', currentSession.user.email, 'Role:', userRole);

      // Create user data object with role
      const userData = {
        ...currentSession.user,
        role: userRole,
        full_name: currentSession.user.user_metadata?.full_name || currentSession.user.email.split('@')[0]
      };

      // Create a clean session object
      const cleanSession = {
        access_token: currentSession.access_token,
        refresh_token: currentSession.refresh_token,
        expires_in: currentSession.expires_in,
        expires_at: currentSession.expires_at,
        token_type: currentSession.token_type,
        user: userData
      };

      // Update localStorage
      localStorage.setItem('user', JSON.stringify(userData));
      localStorage.setItem('access_token', currentSession.access_token);
      localStorage.setItem('isLoggedIn', 'true');

      // Update permissions based on role
      updatePermissions(userRole);

      console.log('=== handleUserSession - Setting State ===');
      console.log('User:', userData.email, 'Role:', userRole);
      console.log('Setting initialized: true, loading: false');
      console.log('=========================================');

      // Update state
      updateState({
        user: userData,
        session: cleanSession,
        loading: false,
        initialized: true,
        error: null
      });

      // Handle redirection if on login page
      const currentPath = window.location.pathname;
      const isOnLoginPage = currentPath === '/' || 
                          currentPath.startsWith('/login') || 
                          currentPath === '/signin';

      if (isOnLoginPage || currentPath === '/') {
        const redirectPath = getRedirectPath(userRole);
        console.log('Auth - Redirecting to:', redirectPath, 'for role:', userRole);
        
        // Small delay to ensure state is updated before redirect
        setTimeout(() => {
          if (window.location.pathname !== redirectPath) {
            window.location.href = redirectPath;
          }
        }, 50);
      }
    } catch (error) {
      console.error('Error handling user session:', error);
      updateState({
        loading: false,
        initialized: true,
        error: error.message,
        user: null,
        session: null,
        permissions: {}
      });
      await supabase.auth.signOut();
      localStorage.removeItem('user');
      localStorage.removeItem('access_token');
      localStorage.removeItem('isLoggedIn');
    }
  }, [navigate, getRedirectPath, updatePermissions]);

  // Handle session errors
  const handleSessionError = useCallback(async (error) => {
