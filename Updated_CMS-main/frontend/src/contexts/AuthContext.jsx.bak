}, [updateState, updatePermissions, getRedirectPath]);

// Logout function with proper cleanup
const logout = useCallback(async () => {
  try {
    // Sign out from Supabase
    const { error } = await supabase.auth.signOut();
    
    // Clear all auth-related items from localStorage
    localStorage.removeItem('user');
    localStorage.removeItem('access_token');
    localStorage.removeItem('isLoggedIn');
    localStorage.removeItem('sb-qkaaoeismqnhjyikgkme.supabase.co-auth-token');
    
    // Clear any other Supabase-related items
    Object.keys(localStorage).forEach(key => {
      if (key.startsWith('sb-') || key.includes('supabase')) {
        localStorage.removeItem(key);
      }
    });
    
    // Update state
    updateState({
      user: null,
      session: null,
      permissions: {},
      loading: false,
      error: null,
      initialized: true
    });
    
    return { success: true };
    
  } catch (error) {
    console.error('Logout error:', error);
    // Even if there's an error, clear local state
    localStorage.removeItem('user');
    localStorage.removeItem('access_token');
    localStorage.removeItem('isLoggedIn');
    
    updateState({
      user: null,
      session: null,
      permissions: {},
      loading: false,
      error: 'You have been signed out, but there was an issue with the server.',
      initialized: true
    });
    
    return { success: false, error: error.message };
  }
}, [updateState]);

// Check if user is authenticated
const isAuthenticated = useCallback(() => {
  // Check for valid session in state
  if (user && session?.access_token) {
    return true;
  }
  
  // Fallback to check localStorage
  const storedToken = localStorage.getItem('access_token');
  const isLoggedIn = localStorage.getItem('isLoggedIn') === 'true';
  
  return !!(storedToken && isLoggedIn);
}, [user, session]);

// Role and permission checks
const hasRole = useCallback((requiredRole) => {
  return user?.role === requiredRole;
}, [user]);

const hasPermission = useCallback((permission) => {
  return permissions[permission] === true;
}, [permissions]);

// Initialize auth state with useCallback to prevent unnecessary re-renders
const initializeAuth = useCallback(async () => {
  // Initialize from localStorage first for instant UI
  const storedUser = localStorage.getItem('user');
  const storedToken = localStorage.getItem('access_token');
  
  if (storedUser && storedToken) {
    try {
      const userData = JSON.parse(storedUser);
      // Only update state if we have valid data
      if (userData && storedToken) {
        updateState(prev => ({
          ...prev,
          user: userData,
          session: { access_token: storedToken },
          loading: false,
          initialized: true
        }));
        updatePermissions(userData.role);
        return true; // Indicate we have a valid session
      }
    } catch (e) {
      console.warn('Failed to parse stored user data', e);
      localStorage.removeItem('user');
      localStorage.removeItem('access_token');
    }
  }
  return false;
}, [updatePermissions]);

  // Handle auth state changes with optimized initialization
  useEffect(() => {
    let isMounted = true;
    let authSubscription = null;
    let isInitialized = false;
    let initializationInProgress = false;
    let initTimeout = null;
    
    const initializeFromStorage = () => {
      if (isInitialized || !isMounted || initializationInProgress) return false;
      initializationInProgress = true;
      
      try {
        const storedUser = localStorage.getItem('user');
        const storedToken = localStorage.getItem('access_token');
        
        if (storedUser && storedToken) {
          const userData = JSON.parse(storedUser);
          if (userData) {
            if (JSON.stringify(state.user) !== storedUser || 
                state.session?.access_token !== storedToken) {
              updateState(prev => ({
                ...prev,
                user: userData,
                session: { access_token: storedToken },
                loading: false,
                initialized: true
              }));
              updatePermissions(userData.role);
            }
            isInitialized = true;
            initializationInProgress = false;
            return true;
          }
        }
      } catch (e) {
        console.warn('Failed to initialize from storage', e);
        localStorage.removeItem('user');
        localStorage.removeItem('access_token');
      }
      return false;
    };

    const checkSession = async () => {
      try {
        const { data: { session: currentSession } } = await supabase.auth.getSession();
        
        if (currentSession) {
          console.log('Initial session found, handling...');
          await handleUserSession(currentSession);
        } else {
          console.log('No active session found');
          updateState(prev => ({
            ...prev,
            loading: false,
            initialized: true,
            user: null,
            session: null
          }));
        }
      } catch (error) {
        console.error('Error checking session:', error);
        if (isMounted) {
          updateState({
            user: null,
            session: null,
            loading: false,
            initialized: true,
            error: error.message || 'Failed to initialize authentication'
          });
        }
      } finally {
        initializationInProgress = false;
      }
    };

    // Set up the auth state change listener
    const setupAuthListener = () => {
      const { data: authListener } = supabase.auth.onAuthStateChange(
        async (event, currentSession) => {
          console.log('Auth state changed:', event, currentSession);
          try {
            if (event === 'SIGNED_IN' || event === 'INITIAL_SESSION' || event === 'TOKEN_REFRESHED') {
              await handleUserSession(currentSession);
            } else if (event === 'SIGNED_OUT') {
              await logout();
            } else if (event === 'USER_UPDATED') {
              const { data: { user } } = await supabase.auth.getUser();
              if (user) {
                updateState(prev => ({
                  ...prev,
                  user: { ...prev.user, ...user },
                  session: { ...prev.session, user }
                }));
              }
            }
          } catch (error) {
            console.error('Error in auth state change handler:', error);
            if (error.message) {
              updateState(prev => ({
                ...prev,
                error: error.message,
                loading: false,
                initialized: true
              }));
            }
          }
        }
      );
      return authListener;
    };

    // Initialize auth
    const initializeAuth = async () => {
      if (!isMounted || isInitialized) return;
      
      // First try to initialize from localStorage for instant UI
      if (isMounted) {
        authSubscription = setupAuthListener();
        await checkSession();
      }
    };

    // Small delay to prevent race conditions
    initTimeout = setTimeout(initializeAuth, 100);
    
    return () => {
      isMounted = false;
      clearTimeout(initTimeout);
      if (authSubscription?.unsubscribe) {
        console.log('Cleaning up auth subscription');
        authSubscription.unsubscribe();
        authSubscription = null;
      }
    };
  }, [handleUserSession]);

  // Create the context value
const value = useMemo(
  () => ({
    user,
    session,
    loading,
    error,
    initialized,
    login,
    logout,
    isAuthenticated: isAuthenticated(),
    hasRole,
    updateState,
    getRedirectPath,
    handleUserSession,
    hasPermission: (permission) => {
      if (!user) return false;
      return permissions[permission] === true;
    },
    updateUser: (updates) => {
      const updatedUser = { ...user, ...updates };
      updateState({ user: updatedUser });
      localStorage.setItem('user', JSON.stringify(updatedUser));
    }
  }), [
    user, 
    session, 
    loading, 
    error, 
    initialized, 
    login, 
    logout, 
    permissions, 
    isAuthenticated, 
    hasRole, 
    updateState, 
    getRedirectPath, 
    handleUserSession
  ]);

  // Memoize public routes to prevent re-renders
  const publicRoutes = useMemo(() => [
    '/', '/home', '/about', '/admissions', '/contact', 
    '/login', '/signup', '/forgot-password', '/_loading',
    '/privacy-policy', '/terms-of-service', '/faq',
    '/auth/callback', '/api/*', '/assets/*', '/images/*',
    '/static/*', '/favicon.ico', '/robots.txt', '/sitemap.xml',
    '/manifest.json', '/service-worker.js', '/workbox-*.js',
    '/precache-manifest.*.js', '/static/js/*', '/static/css/*',
    '/static/media/*', '/*.png', '/*.jpg', '/*.jpeg', '/*.gif', '/*.svg',
    '/*.ico', '/*.json', '/*.txt', '/*.xml', '/*.webmanifest',
    '/*.webp', '/*.woff', '/*.woff2', '/*.ttf', '/*.eot'
  ], []);
  
  // Check if current route is public - this runs first before any auth checks
  const isPublicRoute = useMemo(() => {
    const path = location.pathname;
    
    // Check if path is in public routes or starts with /login/
    return publicRoutes.some(route => {
      if (route.endsWith('*')) {
        const base = route.slice(0, -1); // Remove the *
        return path.startsWith(base);
      }
      return path === route;
    }) || path.startsWith('/login/') || path === '';
  }, [location.pathname, publicRoutes]);

  // If it's a public route, render immediately without waiting for auth to initialize
  if (isPublicRoute) {
    return (
      <AuthContext.Provider value={value}>
        {children}
      </AuthContext.Provider>
    );
  }

  // For protected routes, show loading state until auth is initialized
  if (!initialized) {
    return (
      <div className="flex items-center justify-center min-h-screen">
        <div className="animate-spin rounded-full h-12 w-12 border-t-2 border-b-2 border-blue-500"></div>
      </div>
    );
  }

  // Handle errors after initialization
  if (error) {
    console.error('Auth error:', error);
    return (
      <div className="flex items-center justify-center min-h-screen p-4">
        <div className="text-center">
          <h2 className="text-xl font-semibold text-red-600 mb-2">Authentication Error</h2>
          <p className="text-gray-700 mb-4">There was an issue with authentication. Please refresh the page or try again later.</p>
          <button 
            onClick={() => window.location.reload()}
            className="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors"
          >
            Refresh Page
          </button>
        </div>
      </div>
    );
  }

  return (
    <AuthContext.Provider value={value}>
      {children}
    </AuthContext.Provider>
  );

// Custom hook to use the auth context
export const useAuth = () => {
  const context = useContext(AuthContext);
  if (context === undefined) {
    throw new Error('useAuth must be used within an AuthProvider');
  }
  return context;
};

// Higher Order Component for protecting routes based on roles
export const withAuth = (Component, allowedRoles = []) => {
  return (props) => {
    const { user, loading } = useAuth();
    const navigate = useNavigate();
    const location = useLocation();

    useEffect(() => {
      if (!loading && !user) {
        // Redirect to login if not authenticated
        navigate('/login', { state: { from: location.pathname } });
      } else if (!loading && user && allowedRoles.length > 0 && !allowedRoles.includes(user.role)) {
        // Redirect to unauthorized if user doesn't have required role
        navigate('/unauthorized');
      }
    }, [user, loading, navigate, location]);

    if (loading) return <div>Loading...</div>;
    if (!user) return null;
    if (allowedRoles.length > 0 && !allowedRoles.includes(user.role)) {
      return <div>You don't have permission to access this page.</div>;
    }

    return <Component {...props} />;
  };
};

export default AuthContext;